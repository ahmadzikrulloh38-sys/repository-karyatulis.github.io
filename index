<script>
function login() {
  const username = document.getElementById("username").value.trim();
  const password = document.getElementById("password").value.trim();
  const result = document.getElementById("result");

  if (!username || !password) {
    result.style.color = "red";
    result.innerText = "Username dan password wajib diisi.";
    return;
  }

  result.style.color = "#333";
  result.innerText = "Memverifikasi login...";

  // Kirim data dengan format PALING KOMPATIBEL
  const formData = new URLSearchParams();
  formData.append("username", username);
  formData.append("password", password);

  fetch("https://script.google.com/macros/s/AKfycbyKmbE2LjRWsS2MEtzp9K3zCfhVpsbZyUr94G5ltLTXVirK8sFjsitqBBpKcjoteLyvQg/exec", {
    method: "POST",
    body: formData
  })
  .then(res => res.text())
  .then(text => {
    const data = JSON.parse(text);

    if (data.status === "success") {
  localStorage.setItem("login", "true");
  localStorage.setItem("nama", data.nama);
  window.location.href = "dashboard.html";
}else {
      result.style.color = "red";
      result.innerText = "Login gagal! Username atau password salah.";
    }
  })
  .catch(err => {
    console.error(err);
    result.style.color = "red";
    result.innerText = "Gagal terhubung ke server.";
  });
}
</script>

